	<div class="Main">
		<div class="container">
			<div class="row">
				<aside class="Aside col-md-3">
					<section class="SearchFilters">
						<h4 class="SearchFilters-title">
							Explore Your Results
						</h4>
                        {% if facets is defined and facets|length > 0 %}
