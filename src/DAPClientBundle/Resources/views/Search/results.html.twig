{% extends "DAPClientBundle::base_layout.html.twig" %}

{% block head_title %}
    {{ render(controller("DAPClientBundle:Head:title", {"viewTitle": "Search results"})) }}
{% endblock %}

{% block header %}
    {{ render(controller("DAPClientBundle:Header:show", {"showback": true})) }}
